<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.progress.web.ClientData"
    tools:showIn="@layout/activity_client_data">

    <EditText
        android:id="@+id/edt_client_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:inputType="text"
        android:hint="Name"
        android:backgroundTint="@color/colorClient"/>

    <EditText
        android:id="@+id/edt_client_cnpj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:inputType="text"
        android:hint="CPF/CNPJ"
        android:layout_below="@+id/edt_client_name"
        android:backgroundTint="@color/colorClient"/>


    <EditText
        android:id="@+id/edt_client_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:layout_below="@+id/edt_client_cnpj"
        android:backgroundTint="@color/colorClient"/>

    <EditText
        android:id="@+id/edt_client_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:inputType="phone"
        android:hint="Phone"
        android:layout_below="@+id/edt_client_email"
        android:backgroundTint="@color/colorClient"/>

    <Button
        android:id="@+id/btn_apply_client"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:text="Apply"
        android:textColor="#ffffff"
        android:background="@drawable/btn_apply_client"
        android:layout_below="@+id/edt_client_phone"/>

</RelativeLayout>
