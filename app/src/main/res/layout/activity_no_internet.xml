<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    tools:context="com.progress.web.NoInternetActivity">

    <ImageView
        android:id="@+id/img_no_internet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200px"
        android:src="@drawable/no_internet_dino" />

    <TextView
        android:id="@+id/tv_oh_no_internet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_no_internet"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/oh_no"
        android:textColor="#454040"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_no_internet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_oh_no_internet"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/NoInternet"
        android:textColor="#454040"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_retry_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_no_internet"
        android:background="@color/black_overlay"
        android:text="@string/retry"/>
</RelativeLayout>
